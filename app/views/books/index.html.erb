<h1>Library</h1>
<table width="850">
  <thead>
    <tr>
      <th>Название</th>
      <th>Авторы</th>
      <th>Жанр</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to(book.title, book) %></td>
        <td><%= book.authors.map { |author| author.name }.join(', ') %></td>
        <td><%= link_to book.group.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>